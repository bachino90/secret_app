<h1>Listing secrets</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Media url</th>
      <th>About</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @secrets.each do |secret| %>
      <tr>
        <td><%= secret.content %></td>
        <td><%= secret.media_url %></td>
        <td><%= secret.about %></td>
        <td><%= link_to 'Show', user_secret_path(@user, secret) %></td>
        <td><%= link_to 'Edit', edit_user_secret_path(@user, secret) %></td>
        <td><%= link_to 'Destroy', [@user, secret], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Secret', new_user_secret_path(@user) %> | 
<%= link_to 'Back', user_path(@user) %>
